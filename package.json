{
  "name": "@creastat/assistant-widget",
  "version": "1.0.4",
  "description": "Headless chat widget library with vanilla JS core and React components",
  "keywords": [
    "chat",
    "widget",
    "headless",
    "websocket",
    "react"
  ],
  "homepage": "https://github.com/creastat/assistant-widget#readme",
  "bugs": {
    "url": "https://github.com/creastat/assistant-widget/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creastat/assistant-widget.git"
  },
  "license": "MIT",
  "author": "Creastat",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./generator": {
      "types": "./dist/generator.d.ts",
      "import": "./dist/generator.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:lib": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:demo": "vite",
    "prepublishOnly": "npm run type-check && npm run lint && npm run build",
    "release": "npm publish --access public"
  },
  "dependencies": {
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "module": "./dist/index.js"
}
